@model BankingWebSite.Models.Account

@{
	ViewData["Title"] = "Details Account";
}

<h1>Details</h1>

<a asp-controller="Transactions" asp-action="NewTransaction" asp-route-AccountId="@Model.Id">New Transaction</a>

<div>
	<h4>Account</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Number)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Number)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Balance)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Balance) €
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Transactions)
		</dt>
		<dd class="col-sm-10">
			<table class="table">
				<tr>
					<th>Date</th>
					<th>Amount</th>
				</tr>
				@foreach (var item in Model.Transactions)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Date)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Amount) €
						</td>
						<td>
							<a asp-controller="Transactions" asp-action="Details" asp-route-id="@item.Id">Show Transaction</a>
						</td>
					</tr>
				}
			</table>
		</dd>
	</dl>
</div>
<div>
	<a asp-action="Index">Back to List</a>
</div>
