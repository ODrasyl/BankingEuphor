@model IEnumerable<BankingWebSite.Models.UserAccountViewModel>

@{
	ViewData["Title"] = "UserAccounts";
}

<h1>UserAccounts</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.User)
			</th>
			<th>
				Account @Html.DisplayNameFor(model => model.AccountNumber)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<a asp-controller="Users" asp-action="Details" asp-route-id="@item.User.Id">@Html.DisplayFor(modelItem => item.User.FirstName) @Html.DisplayFor(modelItem => item.User.LastName)</a>
				</td>
				<td>
					<a asp-controller="Accounts" asp-action="Details" asp-route-id="@item.AccountId">@Html.DisplayFor(modelItem => item.AccountNumber)</a>
				</td>
				<td>
					<a asp-action="Details" asp-route-id="@item.Id">Details</a>
				</td>
			</tr>
		}
	</tbody>
</table>
